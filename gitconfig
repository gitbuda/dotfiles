[core]
    excludesfile = ~/.gitignore
    editor = vim

[user]
    name = Marko Budiselic
    email = mbudiselicbuda@gmail.com

[alias]
    lol = log --oneline
    co = checkout
    ct = commit
    adda = add --all .
    st = status
    dc = diff --cached -- ':!/**/package-lock.json' ':!package-lock.json'
    dn = diff --name-only
    cta = commit --amend --no-edit
    discard = "! git stash -q --include-untracked && git stash drop -q"

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[credential]
    helper = cache --timeout=28800

[push]
    default = current
